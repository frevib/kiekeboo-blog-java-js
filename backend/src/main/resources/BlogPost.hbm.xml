<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.kiekeboo.app.model">
    <class name="com.kiekeboo.app.model.BlogPostDataModel" table="BLOGPOST">
        <id name="id" column="blog_id">
            <generator class="native"/>
        </id>
        <property name="title" column="title" />
        <property name="contents" column="contents" />
        <property name="date" column="datetime"/>
        <property name="writer" column="writer"/>
    </class>
</hibernate-mapping>