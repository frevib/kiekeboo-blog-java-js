       <context:property-placeholder location="classpath:database.properties" />

    <!--For blog service-->
       <bean id="blogService" class="com.kiekeboo.app.dao.BlogDAO">
              <constructor-arg>
                     <ref bean="sessionFactory" />
              </constructor-arg>
       </bean>

    <!--For authentication-->
       <bean id="authenticationService" class="com.kiekeboo.app.dao.AuthenticationDAO">
              <constructor-arg>
                     <ref bean="sessionFactory" />
              </constructor-arg>
       </bean>

        <bean id="authenticateUser" class="com.kiekeboo.app.services.AuthenticateUserService">
            <constructor-arg>
                    <ref bean="authenticationService"/>
            </constructor-arg>
        </bean>

    <!--For Hibernate-->
       <tx:annotation-driven/>
       <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
              <property name="sessionFactory" ref="sessionFactory" />
       </bean>

       <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
              <property name="dataSource" ref="dataSource" />
              <property name="configLocation" value="classpath:hibernate.cfg.xml" />
       </bean>

       <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
              <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
              <property name="url" value="jdbc:mysql://ubuntuserver:3306/kiekeboo?zeroDateTimeBehavior=convertToNull"/>
              <property name="username" value="${database.username}"/>
              <property name="password" value="${database.password}"/>
       </bean>

</beans>